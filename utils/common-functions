function centos_setup {
    sudo setenforce 0
    sudo sed -i 's/^SELINUX=.*/SELINUX=permissive/g' /etc/selinux/config

    sudo yum group install "Development Tools" -y
    sudo yum install net-tools tcpdump -y
    sudo yum install epel-release -y
    sudo yum install python3-devel python-six openssl-devel python36-six -y
    sudo yum install kernel-devel
    sudo yum install bmon -y
}

function install_ovs {
    OVS_GIT_REPO=${OVS_GIT_REPO:-https://github.com/openvswitch/ovs}
    OVS_GIT_BRANCH=${OVS_GIT_BRANCH:-master}

    cd
    if [ ! -d ./ovs ]; then
        git clone --depth 1 --no-single-branch $OVS_GIT_REPO
        cd ovs

        if [[ "z$OVS_GIT_BRANCH" != "z" ]]; then
            git checkout $OVS_GIT_BRANCH
        fi
    else
        cd ovs
    fi

    ./boot.sh
    CFLAGS="-O0 -g" ./configure --prefix=/usr
    make -j$(($(nproc) + 1)) V=0
    make install
}

function install_ovn {
    install_ovs

    GIT_REPO=${GIT_REPO:-https://github.com/ovn-org/ovn}
    GIT_BRANCH=${GIT_BRANCH:-master}

    cd
    if [ ! -d ./ovn ]; then
        git clone --depth 1 --no-single-branch $GIT_REPO
        cd ovn

        if [[ "z$GIT_BRANCH" != "z" ]]; then
            git checkout $GIT_BRANCH
        fi
    else
        cd ovn
    fi

    ./boot.sh
    CFLAGS="-O0 -g" ./configure --prefix=/usr --with-ovs-source=${HOME}/ovs
    make -j$(($(nproc) + 1)) V=0
    make install
}

function ovn_add_phys_port {
    name=$1
    mac=$2
    ip=$3
    mask=$4
    gw=$5
    ovs-vsctl add-port br-int $name -- set Interface $name type=internal -- set Interface $name external_ids:iface-id=$name
    ip netns add $name
    ip link set $name netns $name
    ip netns exec $name ip link set $name address $mac
    ip netns exec $name ip addr add $ip/$mask dev $name
    ip netns exec $name ip link set $name up
    ip netns exec $name ip route add default via $gw
}

function install_devstack {
    local type=$1
    local service_ip=$2

    hostname=$(hostname)
    ip=${!hostname}

    centos_setup

    git clone https://opendev.org/openstack/devstack.git ~/devstack
    git clone https://opendev.org/openstack/neutron.git ~/neutron

    pushd ~/devstack
    git fetch https://review.opendev.org/openstack/devstack refs/changes/54/755554/1 && git checkout FETCH_HEAD
    popd

    if [[ "${type}" == "master" ]]; then
       cp /home/vagrant/neutron/devstack/ovn-local.conf.sample /home/vagrant/devstack/local.conf
       sed -i '/ADMIN_PASSWORD.*/a HOST_IP='${ip}'' /home/vagrant/devstack/local.conf
    else
       cp /home/vagrant/neutron/devstack/ovn-compute-local.conf.sample /home/vagrant/devstack/local.conf
       sed -i 's/SERVICE_HOST=.*/SERVICE_HOST='${service_ip}'/' /home/vagrant/devstack/local.conf
       sed -i 's/HOST_IP=.*/HOST_IP='${ip}'/' /home/vagrant/devstack/local.conf
    fi
    cd /home/vagrant/devstack
    sed -i '/STACK_USER=.*/d' /home/vagrant/devstack/local.conf
    sed -i '/ADMIN_PASSWORD.*/a STACK_USER=vagrant' /home/vagrant/devstack/local.conf
    sed -i 's/OVN_BUILD_MODULES=.*/OVN_BUILD_MODULES=False/' /home/vagrant/devstack/local.conf
    ./stack.sh
}

function dvr_setup {
    sed -i 's/#router_distributed.*/router_distributed=True/' /home/vagrant/devstack/local.conf
    sed -i 's/#l3_ha.*/l3_ha=True/' /home/vagrant/devstack/local.conf
    sed -i 's/#enable_distributed_routing.*/enable_distributed_routing=True/' /home/vagrant/devstack/local.conf
    sed -i 's/#l2_population.*/l2_population=True/' /home/vagrant/devstack/local.conf
    sed -i 's/#arp_responder.*/arp_responder=True/' /home/vagrant/devstack/local.conf
    sed -i 's/#agent_mode.*/agent_mode=dvr_snat/' /home/vagrant/devstack/local.conf
    sed -i '/#\[agent\].*/a availability_zone=nova' /home/vagrant/devstack/local.conf
    sed -i '/#\[agent\].*/a debug_iptables_rules=True' /home/vagrant/devstack/local.conf
    sed -i 's/#\[agent\].*/\[agent\]/' /home/vagrant/devstack/local.conf
}

function ubuntu_setup {
    DEBIAN_FRONTEND=noninteractive sudo apt-get purge -qqy python3-simplejson
    DEBIAN_FRONTEND=noninteractive sudo apt-get purge -qqy python3-pyasn1-modules

    cp /vagrant/files/vimrc /home/vagrant/.vimrc
    cat /vagrant/files/bashrc >> /home/vagrant/.bashrc
    mkdir -p ~/.vim/autoload ~/.vim/bundle
    curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim
    sudo pip3 install flake8
    git clone https://github.com/scrooloose/syntastic.git .vim/bundle/syntastic
    git clone https://github.com/tmhedberg/SimpylFold .vim/bundle/SimpylFold
    git clone https://github.com/Raimondi/delimitMate .vim/bundle/delimitMate
    git clone https://github.com/morhetz/gruvbox .vim/bundle/gruvbox
    git clone https://github.com/tpope/vim-fugitive .vim/bundle/vim-fugitive
}

function install_devstack_ubuntu {
    local type=$1
    local backend=$2
    ip=$3
    local service_ip=$4

    ubuntu_setup

    git clone https://opendev.org/openstack/devstack.git ~/devstack

    if [[ "${type}" == "master" ]]; then
       if [[ "${backend}" == "ovn" ]]; then
          cp /opt/stack/neutron/devstack/ovn-local.conf.sample /home/vagrant/devstack/local.conf
       else
          cp /opt/stack/neutron/devstack/ml2-ovs-local.conf.sample /home/vagrant/devstack/local.conf
          dvr_setup
       fi
    else
       if [[ "${backend}" == "ovn" ]]; then
          cp /opt/stack/neutron/devstack/ovn-compute-local.conf.sample /home/vagrant/devstack/local.conf
       else
          cp /opt/stack/neutron/devstack/ml2-ovs-compute-local.conf.sample /home/vagrant/devstack/local.conf
          sed -i 's/local_ip=.*/local_ip='${ip}'/' /home/vagrant/devstack/local.conf
          dvr_setup
       fi
       sed -i 's/SERVICE_HOST=.*/SERVICE_HOST='${service_ip}'/' /home/vagrant/devstack/local.conf
    fi
    cd /home/vagrant/devstack
    sed -i '/STACK_USER=.*/d' /home/vagrant/devstack/local.conf
    sed -i '/ADMIN_PASSWORD.*/a STACK_USER=vagrant' /home/vagrant/devstack/local.conf
    sed -i '/^HOST_IP=.*/d' /home/vagrant/devstack/local.conf
    sed -i '/ADMIN_PASSWORD.*/a HOST_IP='${ip}'' /home/vagrant/devstack/local.conf
    sudo chown vagrant:vagrant /opt
    sudo chown vagrant:vagrant /opt/stack
    sed -i 's/OVN_BUILD_MODULES=.*/OVN_BUILD_MODULES=False/' /home/vagrant/devstack/local.conf
    ./stack.sh
}
